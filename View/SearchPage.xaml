<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoundScape.View.SearchPage">
    <StackLayout>
        <SearchBar x:Name="searchBar" Placeholder="Search" Text="{Binding .}"  />
        <Button Text="Clear"  HorizontalOptions="End" Margin="0,10,10,0" />

        <Label Text="Recent Searches" FontSize="18"  Margin="10,0,0,0" />
        <CollectionView x:Name="recentSearchesList" ItemsSource="{Binding .}" Margin="10,0,10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding .}" FontSize="16" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="Suggested Mixes" FontSize="18"  Margin="10,20,0,0" />
        <CollectionView x:Name="suggestedMixesList" Margin="10,0,10,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Text="{Binding .}" FontSize="16" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>